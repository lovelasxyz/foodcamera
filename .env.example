# --- API configuration ---
# Base URL for backend REST API (no trailing slash)
VITE_API_BASE_URL=http://localhost:5053/api
# Enable real API usage; set false to rely on mocks
VITE_USE_API=true
# Force mocks even if API is enabled (useful for local demo)
VITE_USE_MOCKS=false

# --- Legacy compatibility flags ---
# Will be removed once gateways migrate to new config
VITE_FORCE_LOCAL_SPIN=false
VITE_SPIN_API_URL=http://localhost:5053/api

# --- Telegram integration ---
# Disable Telegram auth entirely (fallback to guest)
VITE_FORCE_GUEST_MODE=false
# Mini app deep link
VITE_TELEGRAM_MINI_APP_URL=https://t.me/your_bot_username/startapp
# Bot username without @
VITE_TELEGRAM_BOT_USERNAME=your_bot_username

# --- Misc ---
# Gameplay tuning for legendary rarity odds
VITE_LEGENDARY_SCALE=0.03
